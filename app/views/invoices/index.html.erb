<div class="container">
  <div class="row justify-content-center row-cols-3 ">
    <% @invoices.each do |invoice| %>
      <div class="card border-3 m-3" style="width: 18rem;">
        <div class="card-body d-flex justify-content-center">
          <h5 class="card-title text-center m-0">
            <%= link_to invoice_path(invoice), target: :_blank, class:"text-decoration-none link-secondary" do %>
              <%= "INV#{invoice.invoice_number}" %>
            <% end %>
          </h5>
          <%= link_to edit_invoice_path(invoice), target: :_blank, class: "link-secondary" do %>
            <i class="fa-regular fa-pen-to-square ms-2"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
