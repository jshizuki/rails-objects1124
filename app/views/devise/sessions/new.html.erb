<div class="container my-4">
  <div class="fs-1">Log in</div>
  <br>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { class: "form-control-sm", autocomplete: "email" } %>
      <%= f.input :password,
                required: false,
                input_html: { class: "form-control-sm", cutocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-secondary btn-sm fs-3 mb-3" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
