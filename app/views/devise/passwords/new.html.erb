<div class="container">
  <div class="fs-1">Forgot your password?</div>
  <br>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { class: "form-control-sm", autocomplete: "email" } %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Send me reset password instructions", class: "btn btn-secondary btn-sm fs-3 mb-3" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
