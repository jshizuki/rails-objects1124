<div class="row row-cols-sm-4 gy-4">
  <% @products_to_display.sort.each do |product| %>
    <div class="col d-flex justify-content-center">
      <div class="card rounded-4" style="width: 15rem">
        <div class="ratio ratio-1x1">
          <% if !product.photo.attached? %>
            <%= cl_image_tag "v1694926417/development/The_Funky_2_pkyvzk", alt: "Product", class: "object-fit-cover opacity-50 rounded-top-4" %>
            <% # "background_iuukz2" %>
          <% else %>
            <%= cl_image_tag product.photo.key, alt: "Product", class: "object-fit-cover opacity-50 rounded-top-4" %>
          <% end %>
        </div>
        <div class="card-header d-flex justify-content-between align-items-center">
          <%= product.sku %>
        </div>
        <div class="card-body">
          <h5 class="card-title fs-2"><%= product.name %></h5>
          <p class="card-text text-end"><%= "$#{product.unit_price}" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
