<div class="container">
  <div class="row row-cols-sm-4 gy-5">
    <% @products.sort.each do |product| %>
      <div class="col d-flex justify-content-center">
        <div class="card" style="width: 18rem;">
          <div class="ratio ratio-1x1">
            <% if !product.photo.attached? %>
              <%= cl_image_tag "background_iuukz2", alt: "Product", class: "object-fit-cover opacity-50" %>
            <% else %>
              <%= cl_image_tag product.photo.key, alt: "Product", class: "object-fit-cover opacity-50" %>
            <% end %>
          </div>
          <div class="card-header d-flex justify-content-between align-items-center">
            <%= product.sku %>
            <% unless product.sold? %>
              <%= link_to edit_objects_product_path(product), class: "fs-4 link-secondary" do %>
                <i class="fa-solid fa-pen"></i>
              <% end %>
            <% end %>
          </div>
          <div class="card-body">
            <h5 class="card-title fs-2"><%= product.name %></h5>
            <p class="card-text fst-italic <%= product.sold? ? "text-danger" : "" %>"><%= product.sold? ? "sold" : "available" %></p>
            <p class="card-text text-end"><%= "$#{product.unit_price}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
