<div class="container">
  <div class="fs-1">INVOICE</div>
  <div class="mb-5">
    <%= simple_form_for @invoice do |each| %>
      <%= each.input :order_date %>
      <%= each.input :billed_to %>
      <%= each.input :product_ids, collection: Product.all, label_method: :sku, value_method: :id, as: :check_boxes %>
      <%= each.submit %>
    <% end %>
  </div>
</div>
